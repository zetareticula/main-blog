---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'EinsteinDB', url: 'https://astro.build/' },
  { name: 'FoundationDB', url: 'https://uno.antfu.me/' },
  {
    name: 'DiabloGPT4',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'Fandango', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Headless CRM',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'Golang', url: 'https://vercel.com' },
  { name: 'TypeScript', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='Klever | Home'
  pageTitle='Klever'
  description='Klever is an AI-powered QA Assistant which empasized accessibility'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Klever</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
             Klever is an assistant which distills highly complex problems into simple solutions. <a
                class='text-white'
                target='_blank'
                href='https://zetareticula.com/'>Klever</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Klever is an AI-powered QA Assistant which empasized accessibility
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Klever is built with
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            What is Klever
          </h2>
          <p class='poppins'>
            Klever is an AI conversational agent which parses <a
              href='https://www.elian.codes/'>Inquiries and populates Answers to complex queries</a
            >. It's a simple, fast, and modern Transformer for Accessibility First AI.
            Give Klever a try. 
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
